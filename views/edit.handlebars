<header>

  <div class="banner"></div>
</header>





<form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">
        <div class="d-flex justify-content-end">
          <a class="btn btn-outline-info" href="/">Back</a>
          <button type="submit" class="btn btn-outline-info ml-2">Submit</button>
        </div>

        <div class="row mb-1">
          <label for="name" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="fas fa-utensils pr-2 me-1"></i>名稱：
          </label>
          <div class="col-sm-7">
            <input type="text" class="form-control form-control-sm" placeholder="名稱..." name="name" id="name"
              value="{{restaurant.name}}" required>
            <div class="invalid-feedback">Name is required.</div>
          </div>
        </div>

        <div class="row mb-1">
          <label for="name_en" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="fas fa-utensils pr-2 me-1"></i>英文名稱：
          </label>
          <div class="col-sm-7">
            <input type="text" class="form-control form-control-sm" placeholder="英文名稱..." name="name_en" id="name_en"
              value="{{restaurant.name_en}}" required>
          </div>
        </div>

        <div class="row mb-1">
          <label for="category" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="fas fa-utensils pr-2 me-1"></i>類別：
          </label>
          <div class="col-sm-7">
            <input type="text" class="form-control form-control-sm" placeholder="類別..." name="category" id="category"
              value="{{restaurant.category}}" required>
          </div>
        </div>

        <div class="row mb-1">
          <label for="rating" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="fas fa-star fa-xs pr-1 me-1"></i>評分：
          </label>
          <div class="col-sm-7">
            <input type="number" class="form-control form-control-sm" placeholder="評分..." name="rating" id="rating"
              step="0.1" value="{{restaurant.rating}}" required>
          </div>
        </div>

        <div class="row mb-1">
          <label for="location" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="fas fa-map-marker-alt pr-2 me-1"></i>地址：
          </label>
          <div class="col-sm-7">
            <input type="text" class="form-control form-control-sm" placeholder="地址..." name="location" id="location"
              value="{{restaurant.location}}" required>
          </div>
        </div>

        <div class="row mb-1">
          <label for="google_map" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="fas fa-location-arrow pr-2 fa-xs me-1"></i>google map：
          </label>
          <div class="col-sm-7">
            <input type="url" class="form-control form-control-sm" placeholder="Google map url..." name="google_map"
              id="google_map" value="{{restaurant.google_map}}" required>
            <div class="invalid-feedback">URL format required.</div>
          </div>
        </div>

        <div class="row mb-1">
          <label for="phone" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="fas fa-mobile-alt pr-2 me-1"></i>電話：
          </label>
          <div class="col-sm-7">
            <input type="text" class="form-control form-control-sm" placeholder="電話..." name="phone" id="phone"
              value="{{restaurant.phone}}" required>
          </div>
        </div>

        <div class="row mb-1">
          <label for="image" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="fas fa-image pr-2 me-1"></i>照片：
          </label>
          <div class="col-sm-7">
            <input type="url" class="form-control form-control-sm" placeholder="照片URL..." name="image" id="image"
              value="{{restaurant.image}}" required>
            <div class="invalid-feedback">URL format required.</div>
          </div>
        </div>

        <p class="mt-3 mb-5">
          <textarea class="form-control" placeholder="描述..." name="description"
            rows="3">{{restaurant.description}} required</textarea>
        </p>

        <img class="rounded mx-auto d-block mb-4 w-100" src="" alt="image" id="imagePreviewBlock"
          style="max-width: 600px">
        <button class="btn btn-info" type="submit">Save</button>

      </div>
    </div>
  </div>
</form>