<div class="banner"></div>
<div class="container mt-5">

  <!-- search bar -->
  <div class="row" id="search-bar">
    <div class="col-12">
      <form action="/search">
        <div class="input-group mb-3">
          <input type="text" name="keyword" class="form-control" placeholder="搜尋你喜愛的餐廳吧" aria-label="Movie Name..."
            aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit" id="search-button">GO</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <!-- movie list -->

  <div class='row' id='data-panel'>
    {{#each restaurants}}
    <div class="col-sm-3" id='card-container'>
      <div class="card">
        <div class="card-image" title="{{ this.name }}">
          <a href="/restaurants/{{ this.id }}" class="text-decoration-none">
            <img src="{{this.image}}" class="card-img-top" alt="{{this.image}}">
          </a>
        </div>
        <div class="card-body">
          <a href="/restaurants/{{ this.id }}" class="card-title h5 text-decoration-none d-block"
            title="{{ this.name }}">{{
            this.name }}</a>
          <span class="badge bg-info"><i class="fas fa-utensils pr-2"></i>{{ this.category }}</span>
          <span class="badge bg-warning text-dark"><i class="bi bi-star-fill me-1"></i>{{ this.rating }}<i
              class="fas fa-star fa-xs"></i></span>
        </div>
      </div>
    </div>


    {{/each}}
  </div>